@model IEnumerable<Post>

@{
    ViewData["Title"] = "Post";
}

<div class="container py-5">
    <!-- Post Creation Form -->
    <div id="postCreationForm" class="card create-post-card shadow-lg border-0 w-50 d-none">
        <div class="card-body p-4">
            <button class="btn-close float-end" id="closePostForm"></button>
            <h5 class="card-title text-center mb-4">Create a New Post</h5>
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="mb-4">
                    <input name="Title"
                           class="form-control form-control-lg border-0 shadow-sm rounded-pill"
                           placeholder="What's on your mind?"
                           required />
                </div>
                <div class="mb-4">
                    <textarea name="Description"
                              class="form-control border-0 shadow-sm rounded"
                              rows="4"
                              placeholder="Write your post..."
                              required></textarea>
                </div>
                <div class="d-flex justify-content-between align-items-center">
                    <div class="file-upload position-relative">
                        <label for="imageUpload" class="btn btn-light shadow-sm rounded-pill">
                            <i class="fas fa-image me-2"></i>Add Photo
                        </label>
                        <input type="file"
                               id="imageUpload"
                               name="image"
                               accept="image/*"
                               class="form-control d-none" />
                    </div>
                    <button type="submit" class="btn btn-primary rounded-pill px-4 shadow-sm">
                        <i class="fas fa-paper-plane me-2"></i>Post
                    </button>
                </div>
            </form>
        </div>
    </div>



    <!-- Posts Feed -->
    @foreach (var post in Model)
    {
        <div class="card-post card post-card mb-4 w-75" id="post-@post.PostId">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="d-flex align-items-center">
                        <div class="rounded-circle bg-primary text-white p-2 me-2">
                            <i class="fas fa-user"></i>
                        </div>
                        <div>
                            <h5 class="card-title mb-0" id="title-@post.PostId">@post.Title</h5>
                            <small class="text-muted">
                                <i class="far fa-clock me-1"></i>
                                @post.CreatedAt.ToString("MMM dd, yyyy HH:mm")
                            </small>
                        </div>
                    </div>
                    <div class="dropdown">
                        <button class="btn btn-light btn-sm" type="button" data-bs-toggle="dropdown">
                            <i class="fas fa-ellipsis-v"></i>
                        </button>
                        <ul class="dropdown-menu">
                            <li>
                                <a class="dropdown-item" href="#" onclick="editPost(@post.PostId)">
                                    <i class="fas fa-edit me-2"></i>Edit
                                </a>
                            </li>
                            <li>
                                <a class="dropdown-item text-danger" href="#" onclick="deletePost(@post.PostId)">
                                    <i class="fas fa-trash me-2"></i>Delete
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
                <p class="card-text" id="description-@post.PostId">@post.Description</p>
                @if (!string.IsNullOrEmpty(post.ImagePath))
                {
                    <img src="@post.ImagePath" class="img-fluid post-image w-100 mb-3"
                         id="image-@post.PostId" alt="Post image" />
                }
            </div>
        </div>
    }
</div>

<!-- Edit Modal -->
<div class="modal fade" id="editModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header border-0">
                <h5 class="modal-title">Edit Post</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="editForm" enctype="multipart/form-data">
                    <input type="hidden" id="editPostId" />
                    <div class="mb-3">
                        <input id="editTitle" name="Title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <textarea id="editDescription" name="Description"
                                  class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="file-upload">
                        <button class="btn btn-light" type="button">
                            <i class="fas fa-image me-2"></i>Change Photo
                        </button>
                        <input type="file" id="editImage" name="image" accept="image/*" />
                    </div>
                </form>
            </div>
            <div class="modal-footer border-0">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updatePost()">
                    <i class="fas fa-save me-2"></i>Save Changes
                </button>
            </div>
        </div>
    </div>
</div>

